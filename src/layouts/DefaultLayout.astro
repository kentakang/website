---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title, ogTitle, ogDescription, ogImage } = Astro.props;
const pageTitle = title ? `${title} | kentakang.com` : 'kentakang.com';
---
<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{pageTitle}</title>
    <meta property="og:title" content={ogTitle || pageTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={ogDescription || 'kentakang personal website'} />
    <meta property="og:image" content={`${Astro.url.protocol}//${Astro.url.host}${ogImage}`} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="kentakang.com" />
  </head>
  <body>
    <div class="max-w-xs lg:max-w-3xl mx-auto py-16">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>